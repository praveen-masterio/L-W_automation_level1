<?xml
 version="1.0"
 encoding="UTF-8"?>

<Configuration status="WARN">
	<Properties>
		<Property name="logdir">./logs</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">

			<PatternLayout
				pattern="%d{HH:mm:ss.SSS}
 [%t] %-5level %logger{36} - %msg%n" />

		</Console>

		<RollingFile name="File"
			fileName="${logdir}/automation.log"
			filePattern="${logdir}/automation-%d{yyyy-MM-dd}.log">

			<PatternLayout
				pattern="%d{HH:mm:ss.SSS}
 [%t] %-5level %logger{36} - %msg%n" />

			<Policies>

				<SizeBasedTriggeringPolicy size="50000" />

			</Policies>

		</RollingFile>

	</Appenders>




	<Loggers>




		<Root level="INFO">

			<!-- <AppenderRef ref="Console"/> -->


			<AppenderRef ref="File" />

		</Root>




		<Logger name="Base.testBase" level="DEBUG" />




	</Loggers>




</Configuration>